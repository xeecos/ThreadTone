{
    "name": "threadtone builder",
    "version": "0.0.1",
    "description": "threadtone builder",
    "author": {
        "name": "xeecos",
        "email": "flashindream@gmail.com"
    },
    "homepage": "http://yeakong.com",
    "main": "../bundle/app/bundle.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "publish": "electron-builder"
    },
    "build": {
        "appId": "com.yeakong.threadtone",
        "productName": "ThreadTone",
        "compression": "normal",
        "copyright": "Copyright ï¿½ 2018 Yeakong.com",
        "directories": {
            "buildResources": "build",
            "output": "releases",
            "app": "../client"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                {
                    "target": "dmg"
                }
            ]
        },
        "linux": {
            "target": "deb",
            "icon": "build/linux/"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "buildDependenciesFromSource": false,
        "nodeGypRebuild": false,
        "buildVersion": "1",
        "electronVersion": "1.7.8"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xeecos/TheadTone"
    },
    "keywords": [
        "serial",
        "threadtone"
    ],
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "electron": "^1.7.9"
    }
}